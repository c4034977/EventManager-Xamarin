<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EventManagerMaui.LoginPage"
             NavigationPage.HasNavigationBar="False">

    <Grid>
        <!-- Define two columns for the split-screen layout -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*" />
            <!-- Left panel (image) -->
            <ColumnDefinition Width="0.5*" />
            <!-- Right panel (form) -->
        </Grid.ColumnDefinitions>

        <!-- Left Panel: Image -->
        <Image Grid.Column="0" 
               Source="https://images.unsplash.com/photo-1531058020387-3be344556be6?q=80&amp;w=2070&amp;auto=format&amp;fit=crop" 
               Aspect="AspectFill" />

        <!-- Right Panel: Form -->
        <ScrollView Grid.Column="1">
            <VerticalStackLayout VerticalOptions="Center" Spacing="15" Padding="40, 30">

                <!-- Welcome Text Section -->
                <Label 
                    Text="Unlock Your Next Experience"
                    FontFamily="DancingScript-Bold"
                    FontSize="42"
                    TextColor="#4F46E5"
                    HorizontalTextAlignment="Start" />
                <Label 
                    Text="Sign in to discover and register for exclusive events."
                    TextColor="#6B7280"
                    FontSize="16"
                    Margin="0, 0, 0, 30"
                    HorizontalTextAlignment="Start" />

                <!-- Username Entry -->
                <Label Text="Username" FontAttributes="Bold" TextColor="#1F2937" />
                <Border Stroke="#D1D5DB" StrokeThickness="1" Padding="10,0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>
                    <Entry x:Name="UsernameEntry" Placeholder="Enter your username" FontSize="16" />
                </Border>

                <!-- Password Entry -->
                <Label Text="Password" FontAttributes="Bold" TextColor="#1F2937" Margin="0,10,0,0" />
                <Border Stroke="#D1D5DB" StrokeThickness="1" Padding="10,0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>
                    <Entry x:Name="PasswordEntry" Placeholder="Enter your password" IsPassword="True" FontSize="16" />
                </Border>

                <!-- Sign In Button -->
                <Button 
                    x:Name="SignInButton"
                    Text="Sign In"
                    TextColor="White"
                    FontAttributes="Bold"
                    BackgroundColor="#4F46E5"
                    CornerRadius="25"
                    HeightRequest="50"
                    Margin="0,20,0,0" />

                <!-- Register & Back Links -->
                <HorizontalStackLayout HorizontalOptions="Center" Spacing="5" Margin="0,15,0,0">
                    <Label Text="Don't have an account?" TextColor="#6B7280" />
                    <!-- THE NAME IS ADDED HERE -->
                    <Label x:Name="RegisterLabel" Text="Register here" TextColor="#4F46E5" FontAttributes="Bold" />
                </HorizontalStackLayout>
                <Label Text="&lt; Back to Welcome Page" TextColor="#4F46E5" FontAttributes="Bold" HorizontalOptions="Center" Margin="0,10,0,0">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnBackTapped" />
                    </Label.GestureRecognizers>
                </Label>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>