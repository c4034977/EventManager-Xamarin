<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EventManagerMaui.AdminLoginPage"
             NavigationPage.HasNavigationBar="False">

    <Grid>
        <!-- Define two columns for the split-screen layout -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*" />
            <!-- Left panel (image) -->
            <ColumnDefinition Width="0.5*" />
            <!-- Right panel (form) -->
        </Grid.ColumnDefinitions>

        <!-- Left Panel: Image -->
        <Image Grid.Column="0" 
               Source="https://images.unsplash.com/photo-1521737604893-d14cc237f11d?q=80&amp;w=2084&amp;auto=format&amp;fit=crop" 
               Aspect="AspectFill" />

        <!-- Right Panel: Form -->
        <ScrollView Grid.Column="1">
            <VerticalStackLayout VerticalOptions="Center" Spacing="15" Padding="40, 30">

                <!-- Welcome Text Section -->
                <Label 
                    Text="Administrator Access"
                    FontSize="36"
                    FontAttributes="Bold"
                    TextColor="#1F2937"
                    HorizontalTextAlignment="Start" />
                <Label 
                    Text="Welcome to the command center. Please sign in to continue."
                    TextColor="#6B7280"
                    FontSize="16"
                    Margin="0, 0, 0, 30"
                    HorizontalTextAlignment="Start" />

                <!-- Username Entry -->
                <Label Text="Admin Username" FontAttributes="Bold" TextColor="#1F2937" />
                <Border Stroke="#D1D5DB" StrokeThickness="1" Padding="10,0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>
                    <Entry x:Name="UsernameEntry" Placeholder="Enter your username" FontSize="16" />
                </Border>

                <!-- Password Entry -->
                <Label Text="Admin Password" FontAttributes="Bold" TextColor="#1F2937" Margin="0,10,0,0" />
                <Border Stroke="#D1D5DB" StrokeThickness="1" Padding="10,0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>
                    <Entry x:Name="PasswordEntry" Placeholder="Enter your password" IsPassword="True" FontSize="16" />
                </Border>

                <!-- Sign In Button -->
                <Button 
                    x:Name="SignInButton"
                    Text="Sign In as Admin"
                    TextColor="White"
                    FontAttributes="Bold"
                    BackgroundColor="#DC2626"
                    CornerRadius="25"
                    HeightRequest="50"
                    Margin="0,20,0,0" />

                <!-- Back Link -->
                <Label Text="&lt; Back to Welcome Page" TextColor="#DC2626" FontAttributes="Bold" HorizontalOptions="Center" Margin="0,15,0,0">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnBackTapped" />
                    </Label.GestureRecognizers>
                </Label>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>