<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EventManagerMaui.AdminDashboardPage"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#F1F5F9">

    <ScrollView>
        <VerticalStackLayout Padding="25">

            <!-- Header -->
            <Grid ColumnDefinitions="*, Auto" Margin="0,0,0,15">
                <VerticalStackLayout>
                    <Label Text="Admin Dashboard" FontSize="32" FontAttributes="Bold" TextColor="#1E293B" />
                    <Label Text="Welcome back, Admin!" FontSize="16" TextColor="#64748B" />
                </VerticalStackLayout>
                <Button x:Name="LogoutButton" Grid.Column="1" Text="Logout" BackgroundColor="#FEE2E2" TextColor="#DC2626" FontAttributes="Bold" CornerRadius="20" VerticalOptions="Center"/>
            </Grid>

            <!-- Stat Cards -->
            <Grid ColumnDefinitions="*,*,*" ColumnSpacing="15" Margin="0,10,0,25">
                <Border Stroke="#E2E8F0" BackgroundColor="White" Padding="15">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    <HorizontalStackLayout Spacing="15">
                        <Frame BackgroundColor="#4F46E5" CornerRadius="25" HeightRequest="50" WidthRequest="50" HasShadow="False" />
                        <VerticalStackLayout VerticalOptions="Center">
                            <Label x:Name="TotalEventsLabel" Text="0" FontSize="28" FontAttributes="Bold" />
                            <Label Text="Total Events" TextColor="#64748B" />
                        </VerticalStackLayout>
                    </HorizontalStackLayout>
                </Border>
                <Border Grid.Column="1" Stroke="#E2E8F0" BackgroundColor="White" Padding="15">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    <HorizontalStackLayout Spacing="15">
                        <Frame BackgroundColor="#10B981" CornerRadius="25" HeightRequest="50" WidthRequest="50" HasShadow="False" />
                        <VerticalStackLayout VerticalOptions="Center">
                            <Label x:Name="TotalUsersLabel" Text="0" FontSize="28" FontAttributes="Bold" />
                            <Label Text="Total Users" TextColor="#64748B" />
                        </VerticalStackLayout>
                    </HorizontalStackLayout>
                </Border>
                <Border Grid.Column="2" Stroke="#E2E8F0" BackgroundColor="White" Padding="15">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    <HorizontalStackLayout Spacing="15">
                        <Frame BackgroundColor="#EF4444" CornerRadius="25" HeightRequest="50" WidthRequest="50" HasShadow="False" />
                        <VerticalStackLayout VerticalOptions="Center">
                            <Label x:Name="TotalFeedbackLabel" Text="0" FontSize="28" FontAttributes="Bold" />
                            <Label Text="New Feedback" TextColor="#64748B" />
                        </VerticalStackLayout>
                    </HorizontalStackLayout>
                </Border>
            </Grid>

            <!-- Add New Item Card -->
            <Border Stroke="#E2E8F0" BackgroundColor="White" Padding="20" Margin="0,0,0,25">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="12" />
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="10">
                    <Label Text="Add New Item" FontSize="20" FontAttributes="Bold" />
                    <Entry x:Name="TitleEntry" Placeholder="Title" />
                    <Picker x:Name="TypePicker" Title="Select Type">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>Event</x:String>
                                <x:String>Task</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>
                    <Button x:Name="AddItemButton" Text="Add Item" BackgroundColor="#4F46E5" TextColor="White" FontAttributes="Bold" CornerRadius="20" HorizontalOptions="End" />
                </VerticalStackLayout>
            </Border>

            <!-- Items Lists -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="25">
                <VerticalStackLayout Grid.Column="0">
                    <Label Text="Managed Events" FontSize="20" FontAttributes="Bold" Margin="0,0,0,10"/>
                    <CollectionView x:Name="EventsCollectionView" EmptyView="No events created.">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="15" Margin="0,0,0,10" Stroke="#E2E8F0" BackgroundColor="White">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="8" />
                                    </Border.StrokeShape>
                                    <Grid ColumnDefinitions="*, Auto">
                                        <VerticalStackLayout>
                                            <Label Text="{Binding Title}" FontAttributes="Bold" />
                                            <Label Text="{Binding EventDate, StringFormat='{0:MMM d, yyyy}'}" FontSize="12" TextColor="#64748B"/>
                                        </VerticalStackLayout>
                                        <Button Grid.Column="1" Text="View Feedback" Clicked="OnViewFeedbackClicked" BackgroundColor="Transparent" TextColor="#4F46E5" FontAttributes="Bold" FontSize="12"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Column="1">
                    <Label Text="Internal Tasks" FontSize="20" FontAttributes="Bold" Margin="0,0,0,10"/>
                    <CollectionView x:Name="TasksCollectionView" EmptyView="No tasks created.">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="15" Margin="0,0,0,10" Stroke="#E2E8F0" BackgroundColor="White">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="8" />
                                    </Border.StrokeShape>
                                    <Label Text="{Binding Title}" />
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>